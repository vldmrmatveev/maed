mixin arrowItemsAdaptive(text, img, num)
	.w-full.relative.text-center.md_text-left(class="md_w-1/4 px-3")
		img(src=require('/img/'+img), alt="").w-full.h-20.md_h-14.lg_h-20.object-contain.object-left.mb-4.mx-auto.md_ml-0
		.hidden.md_flex.w-8.h-8.bg-yellow.items-center.justify-center.rounded-full.xl_-ml-8.font-bold.mb-6= num
		p.text-indigo.font-extrabold.mb-6= text
section.py-8.container
	.text-center.md_text-left
		+mainTitle('Программа адаптирована для России', '8')
	.relative
		.hidden.md_block.md_transform.md_translate-y-24.lg_translate-y-28.md_pb-2.lg_pb-0
			+arrowBig(true, 'indigo', 'yellow')
		.flex.flex-wrap.-mx-3
			+arrowItemsAdaptive('Курсы переведены на русский язык', 'nima-arrow-1.png', '1')
			+arrowItemsAdaptive('Учтены российские бизнес-реалии', 'nima-arrow-2.png', '2')
			+arrowItemsAdaptive('Преподователи – маркетологи-практики, обученные стандартам NIMA', 'nima-arrow-3.png', '3')
